---
import Hamburger from "./Hamburger.astro";
---

<header class="bg-violet-900">
  <nav class="p-2">
    <Hamburger />
    <div class="nav-links hidden sm:block static w-auto bg-none">
      <a
        class="inline-block px-2 py-4 text-violet-100 font-bold hover:text-violet-300"
        href="/">Home</a
      >
      <a
        class="inline-block px-2 py-4 text-violet-100 font-bold hover:text-violet-300"
        href="/about">About</a
      >
      <a
        class="inline-block px-2 py-4 text-violet-100 font-bold hover:text-violet-300"
        href="/projects">Projects</a
      >
    </div>
  </nav>
</header>

<script>
  document.querySelector(".hamburger")?.addEventListener("click", () => {
    document.querySelector(".nav-links")?.classList.toggle("hidden");
  });
</script>
