---
type Props = {
  svg?: any;
  title: string;
  text: string;
};
const { svg, title, text } = Astro.props;
---

<div
  class="relative text-center overflow-hidden rounded-lg bg-violet-100 px-4 pt-5 pb-12 shadow sm:px-6 sm:pt-6"
>
  <div class="flex justify-center mb-2">
    <div class="rounded-md bg-violet-800 p-3">
      <slot />
    </div>
  </div>
  <p class="text-2xl font-semibold text-gray-900 mb-2">{title}</p>
  <p class="text-sm font-medium text-gray-500">
    {text}
  </p>
</div>
