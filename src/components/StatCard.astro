---
type Props = {
  svg?: any;
  title: string;
  text: string;
};
const { svg, title, text } = Astro.props;
---

<div
  class="relative overflow-hidden rounded-lg bg-violet-100 px-4 pt-5 pb-12 shadow sm:px-6 sm:pt-6"
>
  <dt>
    <div class="flex">
      <div class="rounded-md bg-violet-800 p-3">
        <slot />
      </div>
    </div>
    <p class="text-2xl font-semibold text-gray-900">{title}</p>
  </dt>
  <p class="truncate text-sm font-medium text-gray-500">
    {text}
  </p>
